

<h1>Listing Questions</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Room</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.user.username %></td>
        <td><%= question.room.name %></td>
        <td><%= question.title %></td>
        <td><%= link_to 'Show', room_question_path(question.room, question) %></td>
        <td><%= link_to 'Edit', edit_room_question_path(question.room, question) %></td>
        <td><%= link_to 'Destroy', room_question_path(question.room, question), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
