

<h1>Listing Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= link_to room.name, room %></td>
        <% if can? :update, room %>
          <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <% end %>
        <% if can? :destroy, room %>
          <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, Room %>
  <%= link_to 'New Room', new_room_path %>
<% end %>
