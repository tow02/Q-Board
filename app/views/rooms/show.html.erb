<h3>
  <%= link_to @room.name, @room %>
</h3>

<% @questions.each do |question| %>
  <h4><%= link_to question.title, room_question_path(question.room, question) %></h4>
<% end %>

<br>
<%= link_to 'New Question', new_room_question_path(@room), :class => "btn btn-primary" %>
<br><br>

<% if can? :update, @room %>
  <%= link_to 'Edit', edit_room_path(@room), :class => "btn btn-warning" %>
<% end %>

<% if can? :destroy, @room %>
  <%= link_to "Delete", room_path(@room), method: :delete, data: { confirm: 'Are you sure?'}, :class => "btn btn-danger" %>
<% end %>
