<h3>
  <%= link_to @room.name, @room %>
</h3>
<br>

<% @qas.each do |q, a| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4><%= link_to q.title, room_question_path(q.room, q) %></h4>
    </div>
    <div class="panel-body">
      <%= a.content.truncate_words(20) %> <br>
      <% a.answer_tags.each do |answer_tag| %>
        <span class="badge"><%= link_to Tag.find(answer_tag[:tag_id]).name, tag_path(Tag.find(answer_tag[:tag_id])), class: "tags-text" %></span>
      <% end %>
      <p class="pull-right">Posted at: <%= a.created_at.strftime('%v') %></p>
    </div>
  </div>
<% end %>

<br>
<%= link_to 'New Question', new_room_question_path(@room), :class => "btn btn-primary" %>
<br><br>

<% if can? :update, @room %>
  <%= link_to 'Edit', edit_room_path(@room), :class => "btn btn-warning" %>
<% end %>

<% if can? :destroy, @room %>
  <%= link_to "Delete", room_path(@room), method: :delete, data: { confirm: 'Are you sure?'}, :class => "btn btn-danger" %>
<% end %>
